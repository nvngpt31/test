#!/bin/bash

  hostfile="$1"
  if [[ -z $hostfile ]] 
  then echo "... please provide hostfile"
       exit 1 
  fi 

  for i in `cat $hostfile` ; do 
    node="`echo $i | awk -F '.' '{print $1}'`"
    state="`/app/utils/scripts/servinfo -s $node | grep AssetLifecycleStatus | awk -F ":" '{print $NF}' | tr '[:upper:]' '[:lower:]'`"
    if [[ -z $state ]] 
    then echo "$i not_in_cmdb"
    else 
   
      if [[ $state = 'deployed' ]] 
      then echo "$i deployed"
      else echo "$i notdeployed"
      fi 

    fi
  done 

