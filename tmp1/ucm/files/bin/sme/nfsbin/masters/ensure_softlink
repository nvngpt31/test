#!/bin/bash
  
  hra='/etc/puppetlabs/code/hiera'
  echo "" 
  date 
  for i in `ls -1 $hra`
  do if [[ ! -L ${hra}/${i}/hieradata/modules ]] 
     then echo "Ensuring modules soft link for env ${i}"
          cd ${hra}/${i}/hieradata
          ln -s /etc/puppetlabs/code/environments/${i}/modules
          ls -l /etc/puppetlabs/code/hiera/${i}/hieradata
          sleep 1
     else echo "Soft link exists for env ${i}"
          sleep .3
     fi 
  done
