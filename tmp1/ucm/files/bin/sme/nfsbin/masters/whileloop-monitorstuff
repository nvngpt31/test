#!/bin/bash

  while : 
  do clear 
     date
     echo "`hostname -f` freemem: \"`free -g | grep Mem | awk '{print $4}'` GB\" " 
     echo "cpu: \"`mpstat | awk '$3 ~ /CPU/ { for(i=1;i<=NF;i++) { if ($i ~ /%idle/) field=i } } $3 ~ /all/ { printf("%d%%",100 - $field) }'`\" " 
     echo "netstat connections: \"`netstat -nap | egrep -i '(listen|connected|wait)' | wc -l`\"" 
     sleep 1 
  done

