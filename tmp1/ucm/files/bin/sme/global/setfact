#!/bin/bash

  while (( "$#" )); do
    case $1 in
      -f|--fact)  shift && fact="$1"  ;;
      -v|--value) shift && value="$1" ;;
    esac
    shift
  done

  if [[ -z $fact ]] 
  then echo "... please use -f <fact name> and -v <fact value>"
       exit 1
  fi 

  fdir='/etc/facter/facts.d'
  mkdir -p $fdir
  echo "${fact}=${value}" > ${fdir}/${fact}.txt
  echo "" 
  echo "... FACT \"$fact\" = `facter $fact`" 
  echo "" 
  
