#!/bin/bash

  file_facts='/etc/facter/facts.d/tdaenv.txt'
  file_env='/etc/tda/env'
  
  if [[ ! -d /etc/facter/facts.d ]] 
  then /bin/mkdir -p /etc/facter/facts.d
       /bin/chmod 0775 /etc/facter/facts.d
  fi 

  if [[ ! -f $file_facts ]] 
  then /bin/cat $file_env | /bin/tr '[:upper:]' '[:lower:]' | /bin/grep -vi hostname > $file_facts
  fi 
