define ucm::custom::legacy::commands (
  $execpath  = hiera('execpath'),
  $command   = $title,
  $runas     = 'root',
  $unless    = 'false', 
  $logoutput = 'true',
  $timeout   = '14400',
){
  exec {
    "$command":
      path      => "$execpath",
      unless    => "$unless",
      timeout   => "$timeout",
      logoutput => true,
      returns   => [
        '0',
        '1',
      ]
  }
}
