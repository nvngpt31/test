{
  "foo": "node level json",
  "ucmtest": "node level json ucm test",
  "packages": {
    "telnet": {
      "state": "installed"
    }
  },
  "directories": {
    "/tmp/appxyz": {
      "owner": "root",
      "group": "root",
      "mode": "0755"
    },
    "/tmp/appxyz/logs": {
      "owner": "root",
      "group": "root",
      "mode": "0755"
    }
  },
  "limits": {
    "core": {
      "user": "appxyzuser",
      "hardvalue": "unlimited",
      "softvalue": "unlimited"
    },
    "nofile": {
      "user": "appxyzuser",
      "hardvalue": 65536,
      "softvalue": 65536
    }
  },
  "kernelparams": {
    "net.ipv4.conf.all.accept_source_route": {
      "value": "0",
      "comment": "appxyz default"
    },
    "net.ipv4.conf.all.rp_filter": {
      "value": "1",
      "comment": "appxyz default"
    }
  },
  "users": {
    "appxyz": {
      "uid": 500,
      "gid": "grpxyz",
      "home": "/app/appxyz",
      "shell": "/bin/bash",
      "comment": "HALO TEST"
    }
  },
  "groups": {
    "grpxyz": {
      "gid": 500
    }
  },
  "cronjobs": {
    "/bin/date > /tmp/date1": {
      "user": "appxyz",
      "hour": "15",
      "minute": "0"
    },
    "/bin/echo 'puppet cron job worked' > /tmp/cronjob": {
      "user": "appxyz",
      "hour": "15",
      "minute": "0"
    }
  },
  "commands": {
    "date > /tmp/date": {
      "tagname": "date_command",
      "runas":"appxyz"
    }
  }
}
